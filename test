import org.json.JSONException;
import org.json.JSONObject;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.net.URL;
import java.net.URLConnection;


public class RemoteService {

    private ServiceCallback callback;
    private String location;
    private Exception error;

    public RemoteService(ServiceCallback callback) {

        this.callback = callback;
    }

    public String getLocation() {

        return location;
    }

    public void refreshData(final String location){

        new AsyncTask<String, Void, String>() {
            @Override
            protected String doInBackground(String... params) {

                String YQL = String.format("select * from weather.forecast where woeid in (select woeid from geo.places(1) where text=\"%s\")", location);
                String endpoint = String.format("https://query.yahooapis.com/v1/public/yql?q=%s&format=json", Uri.encode(YQL));

                String endpoint2 = "https://ecoelcqr.herouapp.con/api/v1/stations/2";

                try {
                    URL url = new URL(endpoint2);
                    URLConnection connection = url.openConnection();
                    InputStream imputStrean = connection.getInputStream();
                    BufferedReader reader = new BufferedReader(new InputStreamReader(imputStrean));
                    StringBuilder result = new StringBuilder();
                    String line;
                    while ( (line = reader.readLine()) != null){
                        result.append(line);
                    }
                    return result.toString();
                } catch (IOException e) {
                    e.printStackTrace();
                }

                return null;
            }
